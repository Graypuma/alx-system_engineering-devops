#!/usr/bin/env bash
# Install and configure HAproxy on your lb-01 server
sudo apt-get -y install --no-install-recommends software-properties-common
sudo add-apt-repository -y ppa:vbernat/haproxy-2.5
sudo apt-get -y update
sudo apt-get -y install haproxy
sudo sed -i "s/ENABLED=0/ENABLED=1/" /etc/default/haproxy
sudo echo -e "frontend localnodes\n\tbind *:80\n\tmode http\n\tdefault_backend nodes\n" | sudo tee -a /etc/haproxy/haproxy.cfg
sudo echo -e "backend nodes\n\tmode http\n\tbalance roundrobin\n\tserver 1116-web-01 44.200.93.20:80 check\n\tserver 1116-web-02 44.200.23.196:80 check\n" | sudo tee -a /etc/haproxy/haproxy.cfg
sudo service haproxy start
